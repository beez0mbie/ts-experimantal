{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "jsx": "react",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "ES2020",
    "baseUrl": "./packages",
    "paths": {
      "a-test-clincheck": ["a-test-clincheck/src"],
      "b-test-clincheck": ["b-test-clincheck/src"],
      "c-test-clincheck": ["c-test-clincheck/src"]
    }
  },
  "include": ["src"]
}
